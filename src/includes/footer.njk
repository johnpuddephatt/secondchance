<footer class="footer" role="contentinfo">
    <div class="footer__inner container">
      <div class="footer__brand">
        <h3 class="footer__name">{% icon "loop", "footer__loop", 660, 572 %} {{ meta.title }}</h3>
        <p class="footer__description">{{ meta.description }}</p>
        <p class="footer__small-print">{{ meta.smallprint }}</p>
        <p class="footer__small-print--mobile">{{ meta.mobile_smallprint | markdownify | safe }}</p>
      </div>

      <div class="footer__menus">
        <nav class="footer__menu footer__menu--pages">
          <h3 class="footer__menu-heading">Pages</h3>
          <a href="#">Advice</a>
          <a href="#">Support</a>
          <a href="#">Get help</a>
        </nav>
        <nav class="footer__menu footer__menu--pages">
          <h3 class="footer__menu-heading">More information</h3>
          <a href="#">Privacy policy</a>
          <a href="#">Complaints</a>
        </nav>
        <nav class="footer__menu footer__menu--social">
          <h3 class="footer__menu-heading">Social media</h3>
          <a href="#">Facebook</a>
          <a href="#">Twitter</a>
          <a href="#">Instagram</a>
        </nav>
        <nav class="footer__menu footer__menu--contact">
          <h3 class="footer__menu-heading">Contact details</h3>
          <a href="#">{% icon "phone" %} {{ meta.phone }}</a>
          <a href="#">{% icon "email" %} {{ meta.email }}</a>
          <a href="#">{% icon "letter" %} {{ meta.address.split(',').join(',<br>') | safe }}</a>
        </nav>
      </div>

    </div>
</footer>