<header class="header" role="banner">
  <div class="header__inner container">
    <div class="header__left">
      <a href="/" class="header__brand">
        <h3 class="header__name">{% icon "loop", "header__loop", 660, 572 %} {{ meta.title }}</h3>
      </a>
    </div>
    <div class="header__right">
      <a class="button header__call" href="tel:{{ meta.phone | replace(' ','') }}">
        {% icon "phone" %} Call us<span class="call-us">: {{ meta.phone }}</span>
      </a>
      <a target="_blank" class="button header__talk" href="https://www.justgiving.com/secondchancewakefield">
        Donate
      </a>
      <a class="button header__talk" href="/get-in-touch">
        Get in touch
      </a>
    </div>
  </div>
</header>

